<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:score="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <com.example.gulinhai.scoreview.RingRotateView
        android:id="@+id/rrv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        score:mInArcWidth="25dp"
        score:mInCircleColor="@color/colorAccent"
        score:mInCircleWidth="20dp"
        score:mOutCircleColor="@color/blue"
        score:mTextSize="10dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rrv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Start"
        android:textSize="18sp" />
</RelativeLayout>
